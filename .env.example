# Alpacalyzer Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ALPACA API (Required)
# =============================================================================
# Get your API keys from: https://app.alpaca.markets/
# Paper trading is recommended for development
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# =============================================================================
# OPENAI API (Required)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Used for GPT-4 powered hedge fund agents
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# LLM PROVIDER (Optional - defaults to OpenRouter)
# =============================================================================
# Base URL for OpenAI-compatible API (e.g., OpenRouter, Together AI)
LLM_BASE_URL=https://openrouter.ai/api/v1
# API key for LLM provider (falls back to OPENAI_API_KEY if not set)
LLM_API_KEY=
# Default model for standard completions
LLM_MODEL_STANDARD=gpt-4o

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
